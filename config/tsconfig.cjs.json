{
    "extends": "./tsconfig.base.json",
    "compilerOptions": {
        "lib": ["ES2020", "DOM"],
        "module": "ESNext",
        "emitDeclarationOnly": true,
        "sourceMap": true,
        "inlineSources": true,
        "declarationMap": true,
        "rootDir": "../src",
        "outDir": "../dist/cjs",
        "jsx": "react-jsx",

        "ignoreDeprecations": "5.0",
        "suppressImplicitAnyIndexErrors": true,
        "verbatimModuleSyntax": true,
        "isolatedModules": true
    },
    "include": ["../src"]
}
