{
    "name": "@iamyth/util",
    "version": "1.2.1",
    "main": "cjs/index.js",
    "module": "esm/index.js",
    "type": "module",
    "exports": {
        ".": {
            "import": "./esm/index.js",
            "require": "./cjs/index.js"
        },
        "./core": {
            "import": "./esm/index.js",
            "require": "./cjs/index.js"
        },
        "./react": {
            "import": "./esm/react.js",
            "require": "./cjs/react.js"
        },
        "./web": {
            "import": "./esm/browser.js",
            "require": "./cjs/browser.js"
        }
    },
    "license": "MIT",
    "scripts": {
        "run-script": "tsx --tsconfig config/tsconfig.script.json",
        "format": "yarn run-script script/format.ts",
        "lint": "yarn run-script script/lint.ts",
        "build": "yarn run-script script/build.ts",
        "test": "jest --config config/jest.config.cjs --coverage"
    },
    "devDependencies": {
        "@iamyth/logger": "1.0.6",
        "@iamyth/prettier-config": "0.0.2",
        "@iamyth/task-runner": "1.0.0",
        "@types/fs-extra": "11.0.4",
        "@types/jest": "29.5.12",
        "@types/node": "20.12.12",
        "@types/react": "18.3.2",
        "eslint-config-iamyth": "0.0.14",
        "fs-extra": "11.2.0",
        "jest": "29.7.0",
        "jest-environment-jsdom": "29.7.0",
        "prettier": "3.2.5",
        "react": "18.3.1",
        "ts-jest": "29.1.2",
        "tsx": "4.10.4",
        "typescript": "5.4.5"
    }
}
