{
    "name": "@iamyth/util",
    "version": "1.2.1",
    "main": "cjs/index.js",
    "module": "esm/index.js",
    "type": "module",
    "exports": {
        ".": {
            "import": "./esm/index.js",
            "require": "./cjs/index.js"
        },
        "./core": {
            "import": "./esm/index.js",
            "require": "./cjs/index.js"
        },
        "./react": {
            "import": "./esm/react.js",
            "require": "./cjs/react.js"
        },
        "./web": {
            "import": "./esm/browser.js",
            "require": "./cjs/browser.js"
        }
    },
    "license": "MIT",
    "scripts": {
        "run-script": "tsx --tsconfig config/tsconfig.script.json",
        "format": "yarn run-script script/format.ts",
        "lint": "yarn run-script script/lint.ts",
        "build": "yarn run-script script/build.ts",
        "test": "jest --config config/jest.config.cjs --coverage"
    },
    "devDependencies": {
        "@iamyth/logger": "1.0.6",
        "@iamyth/prettier-config": "0.0.2",
        "@iamyth/task-runner": "1.0.0",
        "@types/fs-extra": "9.0.13",
        "@types/jest": "27.5.1",
        "@types/node": "17.0.35",
        "@types/react": "18.0.9",
        "eslint-config-iamyth": "0.0.10",
        "fs-extra": "10.1.0",
        "jest": "28.1.0",
        "jest-environment-jsdom": "28.1.0",
        "prettier": "2.6.2",
        "react": "18.1.0",
        "ts-jest": "28.0.3",
        "tsx": "4.10.4",
        "typescript": "4.6.4"
    }
}
